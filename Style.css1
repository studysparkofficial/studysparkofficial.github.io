body {
  font-family: 'Segoe UI', sans-serif;
  margin: 20px;
  background-color: #fdfdfd;
  color: #222;
  line-height: 1.6;
}

h1, h2 {
  color: #1a1a1a;
}

nav {
  background-color: #333;
  padding: 10px;
  text-align: center;
}

nav a {
  color: #fff;
  margin: 0 15px;
  text-decoration: none;
  font-weight: bold;
}

nav a:hover {
  text-decoration: underline;
}

footer {
  text-align: center;
  margin-top: 40px;
  color: #666;
  font-size: 0.9em;
}
